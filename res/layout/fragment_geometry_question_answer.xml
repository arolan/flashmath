<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlFragmentAdditionQuestion"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="35dp"
        android:text=""
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tvShape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text=""
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tvOperand2"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="113dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tvOperand1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="212dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tvOperand3"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="90dp"
        android:layout_alignBaseline="@+id/tvOperand2"
        android:text=""
        android:gravity="left"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tvRectOperand1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="242dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/tvType"
        android:layout_marginRight="30dp"
        android:gravity="right"
        android:maxLength="3"
        android:paddingBottom="0dp"
        android:layout_marginBottom="15dp"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        android:textStyle="bold" />
    
</RelativeLayout>