<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/rlFragmentAdditionQuestion">

    <TextView
        android:id="@+id/tvFractionOperand1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/leftLine"
        android:layout_alignLeft="@+id/leftLine"
        android:layout_alignRight="@+id/leftLine"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:textSize="80sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvFractionOperand3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rightLine"
        android:layout_alignLeft="@+id/rightLine"
        android:layout_alignRight="@+id/rightLine"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:textSize="80sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvFractionOperand2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leftLine"
        android:layout_alignLeft="@+id/leftLine"
        android:layout_alignRight="@+id/leftLine"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:textSize="80sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rightLine"
        android:layout_alignLeft="@+id/rightLine"
        android:layout_alignRight="@+id/rightLine"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="80sp"
        android:maxLength="2"
        android:textStyle="bold" />
    
    <View
        android:id="@+id/leftLine"
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:background="#000000" />
    
    <View
        android:id="@+id/rightLine"
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:layout_toRightOf="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="="
        android:textColor="#000000"
        android:textSize="80sp"
        android:textStyle="bold" />

</RelativeLayout>