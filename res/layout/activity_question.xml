	<FrameLayout 
	    android:id="@+id/fragmentForQuestion"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnClear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
    	 />

    <TextView
        android:id="@+id/tvQuestionProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnClear"
        android:layout_alignBottom="@+id/btnClear"
        android:layout_alignLeft="@+id/fragmentForQuestion"
        android:text="1/10" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnEndQuiz"
        android:layout_alignBottom="@+id/btnEndQuiz"
        android:layout_toRightOf="@+id/tvQuestionProgress"
        android:layout_marginLeft="10dp"
        android:onClick="onClearQuestionAnswer"
        android:text="Clear"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnEndQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/btnClear"
        android:onClick="onEndQuiz"
        android:layout_marginLeft="10dp"
        android:text="End Quiz"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnVerifyAndNextQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnEndQuiz"
        android:layout_toRightOf="@+id/btnEndQuiz"
        android:onClick="onVerifyAndNextQuestionPressed"
        android:layout_marginLeft="10dp"
        android:text="Verify Answer"
        android:textSize="10sp" />

</RelativeLayout>